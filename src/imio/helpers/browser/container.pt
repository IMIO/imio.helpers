<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="imio.helpers">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <dl tal:condition="view/collapse_all_fields|nothing" id="container-collapsible"
      tal:attributes="class python:view.collapse_all_fields_onload and 'collapsible collapsedOnLoad' or 'collapsible'">
    <dt class="collapsibleHeader" i18n:translate="">Fields</dt>
    <dd class="collapsibleContent">
      <table class="no-style-table" width="100%">
        <tal:loop repeat="widget view/widgets/values">
          <tr tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)"
              tal:attributes="id string:row-${widget/id}">
              <td class="table_widget_label">
                <label tal:content="widget/label">Label</label>
              </td>
              <td class="table_widget_value" tal:content="structure widget/render">Value</td>
          </tr>
        </tal:loop>
      </table>

      <fieldset tal:repeat="group view/groups"
                tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
          <legend tal:content="group/label" />
          <table class="no-style-table" width="100%">
              <tr tal:repeat="widget group/widgets/values" tal:attributes="id string:row-${widget/id}">
                  <td class="table_widget_label">
                    <label tal:content="widget/label">Label</label>
                  </td>
                  <td class="table_widget_value" tal:content="structure widget/render">Value</td>
              </tr>
          </table>
      </fieldset>
    </dd>
  </dl>

  <tal:not_collapse_all_fields condition="not: view/collapse_all_fields|nothing">
    <table class="no-style-table" width="100%">
      <tal:loop repeat="widget view/widgets/values">
        <tr tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)"
            tal:attributes="id string:row-${widget/id}">
            <td class="table_widget_label">
              <label tal:content="widget/label">Label</label>
            </td>
            <td class="table_widget_value" tal:content="structure widget/render">Value</td>
        </tr>
      </tal:loop>
    </table>

    <fieldset tal:repeat="group view/groups"
              tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
        <legend tal:content="group/label" />
        <table class="no-style-table" width="100%">
            <tr tal:repeat="widget group/widgets/values" tal:attributes="id string:row-${widget/id}">
                <td class="table_widget_label">
                  <label tal:content="widget/label">Label</label>
                </td>
                <td class="table_widget_value" tal:content="structure widget/render">Value</td>
            </tr>
        </table>
    </fieldset>
  </tal:not_collapse_all_fields>

    <div class="visualClear"></div>

    <tal:block define="imio_folder_listing context/@@imio-folder-listing/index;">
        <tal:content replace="structure imio_folder_listing" />
    </tal:block>

  </metal:content-core>
</metal:main>

</body>
</html>
